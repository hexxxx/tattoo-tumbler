<section class="hero">
    <h2>Add a Tattoo</h2>
    <h4><i>Share your ink with the world</i></h4>
</section>

<form method="POST" action="/tattoos">
    <!-- Title input -->
    <label for="title">Title:</label>
    <input type="text" id="title" name="title" required>
    <br>
    <!-- Description input -->
    <label for="description">Description:</label>
    <textarea id="description" name="description" required></textarea>
    <br>
    <!-- Category input -->
    <label for="category">Category:</label>
    <select id="category" name="category" required>
        <option value="Traditional">Traditional</option>
        <option value="Realism">Realism</option>
        <option value="New School">New School</option>
        <option value="Japanese">Japanese</option>
        <option value="Blackwork">Blackwork</option>
        <option value="Tribal">Tribal</option>
        <option value="Watercolor">Watercolor</option>
        <option value="Geometric">Geometric</option>
        <option value="Illustrative">Illustrative</option>
    </select>
    <br>
    <!-- Artist Instagram input -->
    <label for="artistInsta">Artist Instagram:</label>
    <input type="text" id="artistInsta" name="artistInsta">
    <br>
    <!-- Image input -->
    <label for="image">Image (URL):</label>
    <input type="text" id="image" name="image" required>
    <br>
    <!-- Rating input -->
    <label for="rating">Rating:</label>
    <input type="number" id="rating" name="rating" min="0" max="5" required>
    <br>
    <!-- Featured input -->
    <label for="isFeatured">Featured:</label>
    <input type="checkbox" id="isFeatured" name="isFeatured">
    <br>
    <input type="submit" value="Add Tattoo">
</form>

<%- include('./partials/footer.ejs') %>
</body>
</html>